<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cs_ia_app">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CSIAAPP">
        <activity
            android:name=".Controllers.LogInActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.DeleteItem"
            android:exported="false" />
        <activity
            android:name=".Controllers.ItemDisplayTool"
            android:exported="false" />
        <activity
            android:name=".Controllers.FindItemActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.ItemInfoActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.CreateItem"
            android:exported="false" />
        <activity
            android:name=".Controllers.MainMenu"
            android:exported="false" />
        <activity
            android:name=".Controllers.RecyclerViewClick"
            android:exported="true" />
        <activity
            android:name=".Controllers.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>